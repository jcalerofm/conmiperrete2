<div class="mt-2 mt-md-5">
  <% if @place.reviews.blank? %>
    <h3>Sé el primero en dejar un comentario!</h3>
  <% else %>
    <h3>Comentarios</h3>
    <% @place.reviews.each do |review| %>
      <% if review.user == nil %>
        <p id="review-<%= review.id %>"><%= review.content %></p>
      <% else %>
        <b><%= review.user.username %></b>
        <p id="review-<%= review.id %>"><%= review.content %></p>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="mt-3">
  <div class="mb-4">
    <h4>Tu valoración</h4>
  </div>
  <div>
    <%= simple_form_for([ @place, @review ], remote: true) do |f| %>
      <%= f.input :content,label:false, as: :text %>
      <div class="d-flex justify-content-end mt-4 mb-5">
        <%= f.submit 'Crea una review', type:'button', class:'btn-primary', style:'border-radius:5px' %>
      </div>
    <% end %>
  </div>
</div>

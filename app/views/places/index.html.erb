<div  id="map"
       id="geocoder"

       style="position: absolute;
        width: 100%;
        height: 95vh;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        z-index: 0;"
       data-markers="<%= @markers.to_json %>"
       data-center="<%= @center.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
<div class="row"
      style="justify-content: space-between;
      position: relative;
      left: 0;
      right: 0;
      z-index: 1;" >
  <div class=" col-md-6 ml-7d mr-1 geocoder mt-3" id="searchform">
    <%= form_tag places_path, method: :get do %>
      <div class="d-flex mb-2 mt-2" >
        <%= text_field_tag :places,
        params[:places], id: "place_address",
          placeholder: "Introduzca una localizacion",
          style: "border-radius: 24px; height: 44px; " %>
          <div>
      <%= submit_tag "Buscar", id: "searchbutton", class: "ml-1 btn btn-primary",
        style: "border-radius: 24px; width: 110px; height: 44px; font-family: 'lato';" %>
      </div>
      </div>

    <% end %>
    </div>

</div>
  <div class="col-md-2 "
        style="justify-content: flex-end;
              bottom: 5%;
              position: absolute;
              z-index: 1;
              padding-left: 5px;">
      <div class="text-left">
        <img src="https://cdn0.iconfinder.com/data/icons/kameleon-free-pack-rounded/110/Beach-512.png" style="width: 25px; height: 25px;">
        <p class="mr-2 ml-1" style="font-family: 'lato';"> Playa</p>
        <img src="https://cdn0.iconfinder.com/data/icons/citycons/150/Citycons_park-512.png" style="width: 25px; height: 25px;">
        <p class="ml-1" style="font-family: 'lato';">Parque</p>
      </div>
     <button class="btn btn-info" style="margin-bottom: 5px; border-radius: 24px; width: 110px; height: 44px; font-family: 'Lato';"><%= link_to "Crear Lugar", new_place_path, style: "text-decoration: none; color: white" %></button>

    </div>


    <div id="menu">
    <input
    id="streets-v11" type="radio" name="rtoggle" value="streets" checked="checked"/>
    <label for="streets-v11">mapa</label>
    <input id="satellite-v9" type="radio" name="rtoggle" value="satellite" />
    <label for="satellite-v9">satelite</label>
    </div>



</div>

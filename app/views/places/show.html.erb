
<div class="container mt-5">
  <div class="row">
    <% if @place.photo.attached?%>
      <div class="col-md">
         <%= cl_image_tag @place.photo.key, width: 600, height: 400, crop: :fill, class: "img-fluid" %>
      </div>
      <% else %>
      <div class="col-md">
          <%= cl_image_tag("https://res.cloudinary.com/dhkoueugk/image/upload/v1592425348/Perretes/klara-kulikova-yWpEmVAT-cc-unsplash_usqyp4.jpg", width: 600, height: 400, crop: :fill, class: "card-img-top") %>
      </div>
      <% end %>
    <div class="col-md">
      <h1 style="font-weight: bold;"><%= @place.name %></h1>
      <p><%= @place.description %></p>
      <h3>Servicios en los alrededores:</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      1 of 2
    </div>
    <div class="col">
      2 of 2
    </div>
  </div>

  <div id="reviews">
    <% if @place.reviews.blank? %>
    <h3>Se el primero en dejar una valoración</h3>
    <% else %>
    <h3>Valoraciones</h3>
    <% @place.reviews.each do |review| %>
      <p id="review-<%= review.id %>"><%= review.content %></p>
      <% end %>
    <% end %>
    <h4>Tu valoración</h4>
    <%= simple_form_for([ @place, @review ], remote: true) do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.button :submit %>
    <% end %>



  </div>


</div>
